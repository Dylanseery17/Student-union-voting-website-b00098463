{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Age</th>
                <th>StudentNumber</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Addressline</th>
                <th>Addresslineone</th>
                <th>City</th>
                <th>County</th>
                <th>Datecreated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.Firstname }}</td>
                <td>{{ user.Lastname }}</td>
                <td>{{ user.Age }}</td>
                <td>{{ user.StudentNumber }}</td>
                <td>{{ user.Email }}</td>
                <td>{{ user.Telephone }}</td>
                <td>{{ user.Addressline }}</td>
                <td>{{ user.Addresslineone }}</td>
                <td>{{ user.City }}</td>
                <td>{{ user.County }}</td>
                <td>{{ user.Datecreated ? user.Datecreated|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
